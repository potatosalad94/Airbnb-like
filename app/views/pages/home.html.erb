
  <div class="banner">
    <div class="container">

      <div class="search-container">
        <%= simple_form_for :search, url: flats_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input type="search" class="form-control string required" name="search" id="address-input" placeholder="Where are we going?" />
            <!--<input class="form-control string required" type="text" name="search" id="search_query" /> -->
            <button name="button" type="submit" class="btn btn-success">
            <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </div>

    </div>
  </div>


<div class="container">
  <h1 class="page-title">Check out all the available flats</h1>

  <div class="cards-home">
    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat), class: 'card-decoration' do %>
        <% if flat.photo.blank? %>

          <div class="card-trip">
            <div class="card-category">
            </div>
            <div class="card-trip-infos">
              <div>
                <h2><%= flat.name %></h2>
                <p><%= flat.city %></p>
              </div>
              <h2 class="card-trip-pricing"><%= humanized_money flat.price %>€</h2>
              <% if flat.user.photo.blank? %>
                <%= image_tag "user.png", class: 'card-trip-user avatar-bordered' %>
              <% else %>
                <%= cl_image_tag flat.user.photo.key, class: 'card-trip-user avatar-bordered' %>
              <% end %>
            </div>
          </div>

        <% else %>

          <div class="card-trip">
            <%= cl_image_tag flat.photo.key %>
            <div class="card-trip-infos">
              <div>
                <h2><%= flat.name %></h2>
                <p><%= flat.city %></p>
              </div>
              <h2 class="card-trip-pricing"><%= humanized_money flat.price %>€</h2>
              <% if flat.user.photo.blank? %>
                <%= image_tag "user.png", class: 'card-trip-user avatar-bordered' %>
              <% else %>
                <%= cl_image_tag flat.user.photo.key, class: 'card-trip-user avatar-bordered' %>
              <% end %>
            </div>
          </div>

        <% end %>
      <% end %>
    <% end %>
  </div>

</div>

