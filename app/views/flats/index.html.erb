<div class="container">
  <h1 class="page-title">Check out all the available flats</h1>

  <div class="cards">
    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat), class: 'card-decoration' do %>
        <% if flat.photo.blank? %>
          <div class="card-category" style="background-color: #46cdcf">
            <%= flat.name %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path flat.photo.key, height: 300, width: 400, crop: :fill %>')">
            <%= flat.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
