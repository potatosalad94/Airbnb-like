<h1>Check out all the available flats</h1>

<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6 col-md-4 col lg-3">
      <% @flats.each do |flat| %>
        <div class="flat-card rounded border-0 bg-white">
          <h2><%= flat.name %></h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
