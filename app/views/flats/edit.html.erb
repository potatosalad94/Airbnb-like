
<div class="container">
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2">
      <h1 class="page-title">Edit your flat</h1>
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
        <%= f.input :city %>
        <%= f.input :address %>
        <%= f.input :price_in_cents %>
        <%= f.input :max_guests %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'Publish', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
